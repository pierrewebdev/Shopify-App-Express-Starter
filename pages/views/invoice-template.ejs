<%- include('partials/app-header') %>


<!--Invoice Template-->
<section>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <button data-href="#" class = "dashboard_link" onclick = "backToDashboard()"><span class="dashboard_arrow">&#10140;</span>Back to Dashbaord</button>
                            <td class="title">
                                INVOICE
                            </td>
    
                            <td>
                                Invoice <%= draftOrder.order_name %><br />
                                 <%= invoiceDate %><br />
                                <!-- Due: February 1, 2023 -->
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
    
            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                <h3><%= storeName %></h3>
                            </td>
    
                            <!-- <td>
                                Acme Corp.<br />
                                John Doe<br />
                                john@example.com
                            </td> -->
                        </tr>
                    </table>
                </td>
            </tr>
    
            <tr class="heading">
                <td>Order Summary</td>
    
                <td>Price</td>
            </tr>
    
            <% for (item of JSON.parse(draftOrder.order_line_items)){ %>
                <tr class="item">
                    <td>
                        <div>
                            <img class = "column one" src="<%= item.imageUrl %>" alt="">
                            <div class = "column three">
                                <%= item.name %>
                                Quantity: <%= item.quantity %>
                            </div>
                        </div>
                    </td>
        
                    <td>$<%= Number(item.price).toFixed(2) %></td>
                </tr>
            <% } %>
